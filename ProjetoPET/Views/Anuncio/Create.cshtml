@model ProjetoPET.Models.Anuncio

@{
    ViewData["Title"] = "Cadastrar anúncio";
}

<h1>Cadastrar anúncio</h1>

<h4>Dados</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" asp-for="Foto" class="form-control-file border" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorpoAnuncio" class="control-label"></label>
                <textarea asp-for="CorpoAnuncio" class="form-control"></textarea>
                <span asp-validation-for="CorpoAnuncio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PetId" class="control-label"></label>
                <select asp-for="PetId" class="form-control" asp-items="ViewBag.PetId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-info">Voltar para Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
